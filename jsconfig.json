{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src/",
    "paths": {
      "@/*": [
        "components/*"
      ],
      "src/*": [
        "/*"
      ],
      "pages/*": [
        "pages/*"
      ],
      "styled/*": [
        "styled/*"
      ],
      "theme": [
        "./src/styled/theme.js"
      ],
      "elements": [
        "./src/styled/elements.js"
      ],
      "data": [
        "./src/data.js"
      ],
      "forms": [
        "./src/components/forms/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "public"
  ],
  "module": "commonjs"
}
